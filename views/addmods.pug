extends layout

block content
  h1= title
  -let rows=Number(query.rows)
  -let cols=Number(query.cols)
  if (!(Number.isInteger(rows) && Number.isInteger(cols)))
    p rows or cols is not a valid integer
  else if (rows>10 || rows<1 || cols>10 || cols<1)
    p rows and cols should be between or of the values 1 and 10 
  else 
    p The number of rows is #{rows} and the number of columns is #{cols}
      table#outer
        -for(let i=0; i<rows;i++){
          tr#middle
            -for(let j=0; j<cols;j++){
              td= i+j*j
            -}
        -}

